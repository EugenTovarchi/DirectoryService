{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Information",
        "Microsoft.AspNetCore.Hosting": "Information",
        "Microsoft.AspNetCore.Routing": "Warning",
        "Microsoft.EntityFrameworkCore": "Information",
        "Microsoft.EntityFrameworkCore.Database.Command": "Information",
        "Microsoft.EntityFrameworkCore.Query": "Debug",
        "Microsoft.EntityFrameworkCore.Infrastructure": "Warning",
        "System": "Information",
        "System.Net.Http.HttpClient": "Information",
        "Hangfire": "Information",
        "Application": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp: HH:mm:ss.ff}{Level:3}] {SourceContext: l} {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://seq:5341"
        }
      },
      {
        "Name": "Debug"
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithEnvironmentName",
      "WithThreadId",
      "WithExceptionDetails"
    ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "${DEFAULT_CONNECTION:-Host=postgres;Port=5432;Database=file_service;Username=postgresUser;Password=postgresPassword}",
    "Redis": "redis:6379"
  },
  "Seq": {
    "ApiKey": "${SEQ_API_KEY:-admin1234}",
    "ServerUrl": "${SEQ_URL:-http://seq:5341}"
  },
   "CacheOptions": {
     "EnableCaching": true,
     "DefaultCacheDurationMinutes": 10,
     "DefaultLocalCacheDurationMinutes": 3,
     "DepartmentsCacheDurationMinutes": 5
   },
  "AllowedHosts": "*"
}